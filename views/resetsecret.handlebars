<div class="navigation">
    <div class="logo">🙅🏻🏓</div>
    <div class="buttons">
        <form>
            <button class="login" formaction="/login">LOG IN</button>
            <button class="home" formaction="/home">HOME</button>
        </form>
    </div>
</div>

<div class="content">
    {{#if err}}
        <h4 class="err">{{err}}</h4>
    {{/if}}

    <form class="register" method="POST" autocomplete="off">
        <div class="textbox">Select a question and provide a secret response.
            This will be used to reset your password.</div>
        <select class="standard" name="resetchoice">
            <option name="destination">What is your favorite holiday
                destination?</option>
            <option name="mother">What is your mother's maiden name?</option>
            <option name="food">What is your favorite food or drink?</option>
        </select>
        <input class="standard" name="resetsecret" />
        <button class="submit">SUBMIT</button>
    </form>
</div>